<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Conversation</th>
      <th>Sender</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.conversation %></td>
        <td><%= message.sender %></td>
        <td><%= message.content %></td>
        <td><%= link_to 'Show', [@conversation, message] %></td>
        <td><%= link_to 'Edit', edit_conversation_message_path(@conversation, message) %></td>
        <td><%= link_to 'Destroy', [@conversation, message], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_conversation_message_path(@conversation) %>
